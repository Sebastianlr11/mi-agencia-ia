<section class="contact py-16 text-white">
    <div class="container mx-auto px-6">
      <h2 class="text-4xl md:text-5xl font-bold text-center mb-12 bg-clip-text text-transparent bg-gradient-to-r from-purple-400 to-green-400">
        Contáctanos
      </h2>
      <div class="max-w-lg mx-auto">
        <form class="space-y-6">
          <div>
            <label for="name" class="block text-sm font-medium text-gray-300 mb-1">Nombre</label>
            <input type="text" id="name" name="name" class="input input-bordered w-full bg-gray-900 text-white hover:bg-gray-800 transition-colors duration-300" placeholder="Tu nombre" />
          </div>
          <div>
            <label for="email" class="block text-sm font-medium text-gray-300 mb-1">Email</label>
            <input type="email" id="email" name="email" class="input input-bordered w-full bg-gray-900 text-white hover:bg-gray-800 transition-colors duration-300" placeholder="tu@email.com" />
          </div>
          <div>
            <label for="message" class="block text-sm font-medium text-gray-300 mb-1">Mensaje</label>
            <textarea id="message" name="message" class="textarea textarea-bordered w-full bg-gray-900 text-white hover:bg-gray-800 transition-colors duration-300" placeholder="Escribe tu mensaje" rows="4"></textarea>
          </div>
          <button type="submit" class="btn bg-gradient-to-br from-purple-600 to-purple-700 hover:from-purple-700 hover:to-purple-800 text-white w-full transition-all duration-300 transform hover:scale-105">
            Enviar
          </button>
        </form>
        <p class="text-center text-gray-300 mt-6">
          O contáctanos directamente: <a href="mailto:contacto@miagenciaia.com" class="text-purple-400 hover:text-purple-300 transition-colors duration-300">contacto@miagenciaia.com</a> | +1 123 456 789
        </p>
      </div>
    </div>
  </section>