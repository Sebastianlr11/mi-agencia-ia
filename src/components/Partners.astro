---
import NeonBackground from './NeonBackground.astro';
import Animations from './Animations.astro';
import NeonEffects from './NeonEffects.astro';
---

<section class="partners py-20 text-white relative overflow-hidden" id="partners">
  <NeonBackground />
  <Animations />
  <NeonEffects />

  <div class="container mx-auto px-6 z-10">
    <h2 class="text-3xl md:text-4xl font-bold text-center mb-12 bg-clip-text text-transparent bg-gradient-to-r from-purple-400 to-green-400 animate-pulse-slow">
      Nuestros Partners
    </h2>
    <div class="carousel-wrapper overflow-hidden max-w-7xl mx-auto">
      <div class="carousel flex animate-scroll">
        <!-- Partner 1 -->
        <div class="carousel-item flex-shrink-0 bg-transparent p-6 flex items-center justify-center">
          <img src="/public/google-cloud.png" alt="Google Cloud" class="h-16 w-auto opacity-80 hover:opacity-100 transition-all duration-300 hover:glow-neon" />
        </div>
        <!-- Partner 2 -->
        <div class="carousel-item flex-shrink-0 bg-transparent p-6 flex items-center justify-center">
          <img src="/public/slack.png" alt="Slack" class="h-16 w-auto opacity-80 hover:opacity-100 transition-all duration-300 hover:glow-neon" />
        </div>
        <!-- Partner 3 -->
        <div class="carousel-item flex-shrink-0 bg-transparent p-6 flex items-center justify-center">
          <img src="/public/hubspot.png" alt="HubSpot" class="h-16 w-auto opacity-80 hover:opacity-100 transition-all duration-300 hover:glow-neon" />
        </div>
        <!-- Partner 4 -->
        <div class="carousel-item flex-shrink-0 bg-transparent p-6 flex items-center justify-center">
          <img src="/public/salesforce.png" alt="Salesforce" class="h-16 w-auto opacity-80 hover:opacity-100 transition-all duration-300 hover:glow-neon" />
        </div>
        <!-- Partner 5 -->
        <div class="carousel-item flex-shrink-0 bg-transparent p-6 flex items-center justify-center">
          <img src="/public/microsoft-azure.png" alt="Microsoft Azure" class="h-16 w-auto opacity-80 hover:opacity-100 transition-all duration-300 hover:glow-neon" />
        </div>
        <!-- Duplicamos los elementos para un scroll infinito -->
        <div class="carousel-item flex-shrink-0 bg-transparent p-6 flex items-center justify-center">
          <img src="/public/facebook.png" alt="Facebook" class="h-16 w-auto opacity-80 hover:opacity-100 transition-all duration-300 hover:glow-neon" />
        </div>
        <div class="carousel-item flex-shrink-0 bg-transparent p-6 flex items-center justify-center">
          <img src="/public/tiktok.png" alt="TikTok" class="h-16 w-auto opacity-80 hover:opacity-100 transition-all duration-300 hover:glow-neon" />
        </div>
        <div class="carousel-item flex-shrink-0 bg-transparent p-6 flex items-center justify-center">
          <img src="/public/openai.png" alt="OpenAI" class="h-16 w-auto opacity-80 hover:opacity-100 transition-all duration-300 hover:glow-neon" />
        </div>
        <div class="carousel-item flex-shrink-0 bg-transparent p-6 flex items-center justify-center">
          <img src="/public/make.png" alt="Make" class="h-16 w-auto opacity-80 hover:opacity-100 transition-all duration-300 hover:glow-neon" />
        </div>
        <div class="carousel-item flex-shrink-0 bg-transparent p-6 flex items-center justify-center">
          <img src="/public/n8n.png" alt="n8n" class="h-16 w-auto opacity-80 hover:opacity-100 transition-all duration-300 hover:glow-neon" />
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  /* Estilo del carrusel */
  .carousel-wrapper {
    width: 100%;
  }
  .carousel {
    display: flex;
    width: max-content; /* Asegura que el contenido no se ajuste al contenedor */
  }
  .carousel-item {
    width: 200px; /* Ajusta este valor según el tamaño deseado de cada item */
  }

  /* Animación de desplazamiento infinito */
  .animate-scroll {
    animation: scroll 20s linear infinite;
  }
  @keyframes scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%); /* Se mueve la mitad porque duplicamos los elementos */
    }
  }

  /* Pausar animación al hacer hover */
  .carousel:hover .animate-scroll {
    animation-play-state: paused;
  }
</style>